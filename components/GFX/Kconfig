menu "LED Display"

    choice
        prompt "display type"
        default LEDDISPLAY_TYPE_64X32_16SCAN
        help
            The LED display type.

        # these work:

        config LEDDISPLAY_TYPE_32X16_8SCAN
            bool "32x16 1/8 scan"

        config LEDDISPLAY_TYPE_32X32_16SCAN
            bool "32x32 1/16 scan"

        config LEDDISPLAY_TYPE_64X32_16SCAN
            bool "64x32 1/16 scan"

        config LEDDISPLAY_TYPE_192x32_16SCAN
            bool "192x32 1/16 scan for LED CUBE"

		# for LED Cube
        config LEDDISPLAY_TYPE_32X32x6_16SCAN
            bool "32x32x6 CUBE 1/16 scan"
     
		# for LED Cube
        config LEDDISPLAY_TYPE_64X32x3_16SCAN
            bool "64x32x3 CUBE 1/16 scan"

        config LEDDISPLAY_TYPE_64X64_32SCAN
            bool "64x64 1/32 scan"

        # these don't work:
        #
        #config LEDDISPLAY_TYPE_32X16_4SCAN
        #    bool "32x16 1/4 scan (doesn't work)"
        #
        #config LEDDISPLAY_TYPE_32X32_8SCAN
        #    bool "32x32 1/8 scan (doesn't work!)"
        #
        #config LEDDISPLAY_TYPE_64X32_8SCAN
        #    bool "64x32 1/8 scan (doesn't work!)"

        # what more exists?

    endchoice

    choice LEDDISPLAY_I2S_FREQ
        prompt "I2S frequency"
        default LEDDISPLAY_I2S_FREQ_20MHZ
        help
            generally choose as high as possible / working

        config LEDDISPLAY_I2S_FREQ_13MHZ
            bool "13.3 MHz"

        config LEDDISPLAY_I2S_FREQ_16MHZ
            bool "16 MHz"

        config LEDDISPLAY_I2S_FREQ_20MHZ
            bool "20 MHz"

        config LEDDISPLAY_I2S_FREQ_26MHZ
            bool "26.6 MHz"

    endchoice

    config LEDDISPLAY_TASK_CORE_AFFINITY
        int "Leddisplay render task core affinity"
        default 0
        range -1 1
        help
            Decides on which CPU core the rendering task will run on.
            0, 1: one of the CPUs
            -1: tskNO_AFFINITY

    config LEDDISPLAY_NUM_DISP_BUFFER
        int "Number of Software Display Buffers"
        default 1
        range 1 2
        help
            Number of Displaybuffers (Software used, not the same as DMA buffers)
            1, 2: one of the CPUs

    choice DISPLAY_UPDATE_MODE
        prompt "UPDATE MODE"
        default DISPLAY_UPDATE_CONT
        help
            Change display update mode to continuous/ or FPS based. FPS based consumes less power, but flickering can be visible.

        config DISPLAY_UPDATE_CONT
            bool "Update continuously"

        config DISPLAY_UPDATE_FPS
            bool "Updates with a fixed FPS rate configured in LEDDISPLAY_MIN_FRAME_RATE"

    endchoice

    config LEDDISPLAY_PRESERVE_RAM_SIZE
        int "keep this much (DMA) RAM free [bytes]"
        default 32768

    config LEDDISPLAY_MIN_FRAME_RATE
        int "minimum frame refresh rate [Hz]"
        default 25
	# default was 50

    config COLOR_DEPTH_BITS
        int "Bit depth of a color byte: 4-8"
        default 6
	# default was 8

    # see val2pwm.c
    choice LEDDISPLAY_CORR_BRIGHT
        prompt "correct perceived brightness"
        default LEDDISPLAY_CORR_BRIGHT_MODIFIED

        config LEDDISPLAY_CORR_BRIGHT_NONE
            bool "no brightness correction"

        config LEDDISPLAY_CORR_BRIGHT_STRICT
            bool "strict brightness correction"
            help
                colour values < 10 is LED fully off, and only values >= 10 will lit the LED,
                using original brightness correction curve

        config LEDDISPLAY_CORR_BRIGHT_MODIFIED
            bool "modified brightness correction"
            help
                only colour value 0 is LED fully off, and any value > 0 will lit the LED,
                the original correction curve is scaled accordingly

        config LEDDISPLAY_CORR_BRIGHT_SRGB
            bool "modified brightness correction with sRGB color space intensities"
            help
                only colour value 0 is LED fully off, and any value > 0 will lit the LED,
                the original correction curve is scaled accordingly

    endchoice

    config LEDDISPLAY_R1_GPIO
        int "GPIO for the R1 signal"
        default 2
        range 0 35
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_G1_GPIO
        int "GPIO for the G1 signal"
        default 15
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_B1_GPIO
        int "GPIO for the B1 signal"
        default 4
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_R2_GPIO
        int "GPIO for the R2 signal"
        default 16
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_G2_GPIO
        int "GPIO for the G2 signal"
        default 13
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_B2_GPIO
        int "GPIO for the B2 signal"
        default 17
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_A_GPIO
        int "GPIO for the A signal"
        default 5
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_B_GPIO
        int "GPIO for the B signal"
        default 18
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_C_GPIO
        int "GPIO for the C signal"
        default 19
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_D_GPIO
        int "GPIO for the D signal"
        default 23
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_E_GPIO
        int "GPIO for the E signal (1/32 scan types only)"
        default -1
        range -1 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_LAT_GPIO
        int "GPIO for the LAT signal"
        default 0
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_OE_GPIO
        int "GPIO for the OE signal"
        default 25
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33
        

    config LEDDISPLAY_OE0_GPIO
        int "GPIO for the OE0 signal"
        default 25
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_OE1_GPIO
        int "GPIO for the OE1 signal"
        default 26
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_OE2_GPIO
        int "GPIO for the OE2 signal"
        default 27
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

    config LEDDISPLAY_SEL0_GPIO
        int "GPIO for the SEL0 signal"
        default 26
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33
        
    config LEDDISPLAY_SEL1_GPIO
        int "GPIO for the SEL1 signal"
        default 27
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33
        
    config LEDDISPLAY_SEL2_GPIO
        int "GPIO for the SEL2 signal"
        default 33
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33
        
    config LEDDISPLAY_CLK_GPIO
        int "GPIO for the CLK signal"
        default 14
        range 0 33
        help
            typically usable pins are 2, 4-5, 12-33

endmenu